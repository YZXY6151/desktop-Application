{
  "main": "electron-main.js",
  "name": "ai-app",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.0.0",
    "wait-on": "^8.0.3"
  },
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "electron:dev": "cross-env NODE_ENV=development concurrently -k \"npm run dev --prefix frontend\" \"wait-on http://localhost:5174 && npx electron .\"",
    "electron:build": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.yourname.app",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "react-icons": "^5.5.0"
  }
}
